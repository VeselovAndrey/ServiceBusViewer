@{
	var title = ViewData["Title"] ?? "Service Bus Viewer";
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>@title</title>
	<link rel="stylesheet" href="~/lib/bootstrap/5.3.6/css/bootstrap.min.css" />

	@await RenderSectionAsync("CSS", required: false)
	<style>
		.page-cloak {
			display: none !important;
		}
	</style>
</head>
<body class="container my-4 page-cloak">
	<h1>@ViewData["Title"]</h1>
	@RenderBody()

	<script src="~/lib/bootstrap/5.3.6/js/bootstrap.bundle.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
	<script>
		document.body.classList.remove('page-cloak');
	</script>
</body>
</html>